<Window x:Class="WPFBenchmark.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBenchmark"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="800">
    <StackPanel>
        <Label FontSize="24" Content="CPU benchmark" FontWeight="Bold" HorizontalContentAlignment="Center"/>
        <Label FontSize="20" Content="Please enter the name of your CPU: "/>
        <TextBox x:Name="tbxCPUname" Text="" FontSize="18"/>
        <RadioButton x:Name="rbShort" FontSize="20" IsChecked="True" Content="Short"/>
        <RadioButton x:Name="rbLong" FontSize="20" Content="Long"/>
        <Button x:Name="btnStart" Content="START" Padding="10" FontFamily="Arial Rounded MT Bold" FontSize="36" Background="Black" Foreground="White" Click="btnStart_Click"/>
        <ProgressBar x:Name="pgBar" Minimum="0" Maximum="100" Value="0" Height="50"/>
        <Label Content="Result: " FontSize="18"/>
        <TextBlock x:Name="tbResult" FontSize="25" Foreground="#FF237300" Background="Black"/>
    </StackPanel>
</Window>
